{
    "version": 2,
    "builds": [
        { 
            "src": "api/*.js",
            "use": "@vercel/node",
            "config": { "runtime": "nodejs18.x" }
        },
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "js/**", "use": "@vercel/static" },
        { "src": "css/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health.js"
        },
        {
            "src": "/api/video-info",
            "dest": "/api/video-info.js"
        },
        {
            "src": "/api/download",
            "dest": "/api/download.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/$1",
            "continue": true
        },
        {
            "src": "/((?!.*\\.).*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 