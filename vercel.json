{
    "version": 2,
    "builds": [
        { 
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "js/**", "use": "@vercel/static" },
        { "src": "css/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health.js"
        },
        {
            "src": "/api/video-info",
            "dest": "/api/video-info.js"
        },
        {
            "src": "/api/download",
            "dest": "/api/download.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
} 