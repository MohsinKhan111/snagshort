{
    "version": 2,
    "builds": [
        { "src": "api/index.js", "use": "@vercel/node" },
        { "src": "api/video-info.js", "use": "@vercel/node" },
        { "src": "api/download.js", "use": "@vercel/node" },
        { "src": "api/health.js", "use": "@vercel/node" },
        { "src": "index.html", "use": "@vercel/static" },
        { "src": "js/**/*.js", "use": "@vercel/static" },
        { "src": "css/**/*.css", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health"
        },
        {
            "src": "/api/video-info",
            "dest": "/api/video-info"
        },
        {
            "src": "/api/download",
            "dest": "/api/download"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
} 